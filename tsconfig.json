{
  "compilerOptions": {
    "target": "es5",     
    "module": "commonjs",
    "outDir": "./dist",  
    "rootDir": "./src",
    "baseUrl": "./src",
    "strict": true,      
    "strictPropertyInitialization": false,
    "esModuleInterop": true,              
    "experimentalDecorators": true,       
    "skipLibCheck": true,                
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"]
    }
  }
}
